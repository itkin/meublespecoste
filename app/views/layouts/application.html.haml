%html
  %head
    = javascript_include_tag :defaults, "galleria/src/galleria", "galleria-theme-meublespecoste/galleria.meublespecoste"
    = stylesheet_link_tag 'compiled/application.css', :media => 'screen, projection'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = yield :head

  %body
    #page-wrapper
      #page{:class => "#{params[:action].downcase}_#{params[:controller].downcase} #{params[:controller].downcase}" }
        #header
          %ul.menu
            %li= link_to Page::HOME.link, root_path
            %li= link_to Page::CATEGORIES.link , category_path(Category.first)
            %li= link_to Page::SKILLS.link, skills_path
            %li= link_to Page::POSTS.link, posts_path
            %li.last= link_to Page::CONTACT.link, contacts_path
          .spacer
        #content
          = yield
        #bottom
          .menu
            = link_to t(:home, :scope => :menu), root_path
            %span /
            = link_to t(:categories, :scope => :menu), categories_path
            %span /
            = link_to t(:skills, :scope => :menu)
            %span /
            = link_to t(:events, :scope => :menu)
            %span /
            = link_to t(:contact   , :scope => :menu), :class => 'last'

    = yield :scripts